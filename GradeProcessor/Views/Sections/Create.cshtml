@using GradeProcessor.Models.Sections
@model CreateSectionModel
@{
    ViewData["Title"] = "Create Section";
}

<h2>Create New Section</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="subjectId" class="control-label">Subject</label>
        <select id="subjectId" name="subjectId" class="form-control">
            @foreach (var subject in ViewBag.Subjects)
            {
                <option value="@subject.Id">@subject.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to Sections</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
